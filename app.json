{
  "expo": {
    "name": "IIMA Eventos",
    "slug": "app_evento_ima_nativo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Permita o acesso à câmera para escanear QR Codes.",
          "microphonePermission": "Permita o acesso ao microfone para gravação de vídeo.",
          "recordAudioAndroid": false
        }
      ]
    ],
    "android": {
      "permissions": [
        "CAMERA",
        "android.permission.CAMERA"
      ],
      "package": "com.andersonpsilva.app_evento_ima_nativo",
      "enableProguardInReleaseBuilds": true,
      "enableShrinkResources": true,
      "enableR8": true
    },
    "ios": {
      "infoPlist": {
        "NSCameraUsageDescription": "Permita o acesso à câmera para escanear QR Codes.",
        "NSMicrophoneUsageDescription": "Permita o acesso ao microfone para gravação de vídeo."
      }
    },
    "extra": {
      "eas": {
        "projectId": "3f66bc84-2707-4f0b-a568-bda0f3e1ec73"
      }
    }
  }
}
